@model StoreProcedureProduct.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="table-responsive">
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ProductId
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.ProductId})></a>

